@using EntityLayer;
@model List<TaskComment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>YORUM LİSTESİ</h1>
<div><a asp-action="CommentEkle" asp-controller="Comment" class="btn btn-primary">Yeni Yorum Ekle</a></div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">YORUM ID</th>
                                <th scope="col">YORUM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model)
                            {
                                <tr>
                                    <td>@a.comment_id</td>
                                    <td>@a.comment</td>

                                    <td>
                                        <a onclick="return confirm('Silmek istediğinize eminmisiniz?');" asp-controller="Comment" asp-action="CommentSil" asp-route-id="@a.comment_id" class="btn btn-danger">sil</a>

                                        <a asp-controller="Comment" asp-action="CommentGuncelle" asp-route-id="@a.comment_id" class="btn btn-warning">Güncelle</a>
                                    </td>
                                    <td>
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>

        </div>

