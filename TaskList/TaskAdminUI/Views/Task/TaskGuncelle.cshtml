@model EntityLayer.TaskOwner;
@{
    ViewData["Title"] = "TaskGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>GÖREV GÜNCELLEME SAYFASI</h1>
<form asp-action="TaskGuncelle" asp-controller="Task" method="post">
    <div class="mb-3" style="display:none">
        <label class="form-label">GOREV ID</label>
        <input asp-for="owner_id" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">GOREV ADI</label>
        <input asp-for="owner_name" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">GOREV BASLIGI</label>
        <input asp-for="owner_task_title" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">GOREV ACIKLAMA</label>
        <input asp-for="owner_explanation" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">GOREV DURUMU</label>
        <input asp-for="owner_status" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">GÖREV KAYDI GÜNCELLE</button>
</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>